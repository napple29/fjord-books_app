<h1><%= Comment.model_name.human %></h1>

<table>
  <thead>
    <tr>
      <th><%= User.human_attribute_name(:name) %></th>
      <th><%= Comment.human_attribute_name(:body) %></th>
      <th><%= Comment.human_attribute_name(:created_at) %></th>
    </tr>
  </thead>

  <tbody>
    <% commentable.comments.each do |comment| %>
      <tr>
        <td><% if comment.user.nil? %>
              <%= '退会したユーザ' %>
            <% elsif comment.user.name.blank? %>
              <%= comment.user.email %>
            <% else %>
              <%= comment.user.name %>
            <% end %></td>
        <td><%= comment.body %></td>
        <td><%= comment.created_at.to_s(:datetime_jp) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_with model: [commentable, Comment.new] do |form| %>
  <div class="field">
    <%= form.label :body %>
    <%= form.text_field :body, {required: true} %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
